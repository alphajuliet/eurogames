#!/bin/bash

# Games Database Management Script
# Description: Central interface to manage games database operations using subcommands

# Set script directory as working directory
SCRIPT_DIR="./src/cli"
cd "$SCRIPT_DIR"

# Function to display help
show_help() {
    echo "Usage: $0 <command> [args]"
    echo
    echo "Available commands:"
    echo "  new <id>"
    echo "  lookup <string>"
    echo "  get <id>"
    echo "  update <id>"
    echo "  update-notes <id> <field> <value>"
    echo "  list"
    echo "  backup"
    echo "  run"
    echo "  help"
    echo
    echo "For help with specific commands, use: $0 <command> --help"
}

# Check if no arguments provided
if [ $# -eq 0 ]; then
    show_help
    exit 1
fi

# if [ -z "$VIRTUAL_ENV" ]; then
#   echo "Starting virtual environment"
#   source ./venv/bin/activate
# fi

# Parse command line arguments
command="$1"
shift  # Remove the first argument (the command)

# Execute appropriate script based on command
case "$command" in
    "new")
        ./add-bgg-game.sh "$@"
        ;;
    "lookup")
        ./lookup.sh "$@"
        ;;
    "update")
        ./update-game-data.sh "$@"
        ;;
    "update-notes")
        ./update-notes.sh "$@"
        ;;
    "get")
        ./get-game-data.sh "$@"
        ;;
    "list")
        ./list-games.sh
        ;;
    "backup")
        ./backup-db.sh
        ;;
    "run")
        ./run-app.sh
        ;;
    "help")
        show_help
        ;;
    *)
        echo "Error: Unknown command '$command'"
        echo
        show_help
        exit 1
        ;;
esac
